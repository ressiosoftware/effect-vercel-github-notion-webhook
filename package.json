{
	"name": "github-notion",
	"description": "Updates Notion with GitHub activity",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"engines": {
		"node": ">=22.19.0"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^22.19.0",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.18.3",
	"scripts": {
		"run:dev": "NODE_OPTIONS='--inspect' dotenvx run --convention=nextjs vercel dev",
		"otel:dev": "docker run -p 3000:3000 -p 4317:4317 -p 4318:4318 --rm -it docker.io/grafana/otel-lgtm",
		"test:watch": "vitest",
		"test:run": "vitest run",
		"lint:check": "biome lint .",
		"lint:check:staged": "biome lint . --staged",
		"lint:fix": "biome lint --write .",
		"lint:fix:staged": "biome lint --write . --staged",
		"format:check": "biome format .",
		"format:check:staged": "biome format . --staged",
		"format:fix:staged": "biome format --write . --staged",
		"format:fix": "biome format --write .",
		"check": "biome check --write .",
		"types:check": "tsc --noEmit",
		"build:vercel": "vercel build"
	},
	"imports": {
		"#api/*": "./api/*",
		"#mocks/*": "./src/mocks/*",
		"#platform/*": "./src/platform/*",
		"#services/*": "./src/services/*"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:devtools",
		"@effect/language-service": "catalog:effect",
		"@effect/vitest": "catalog:effect",
		"@types/node": "^22.0.0",
		"fast-check": "catalog:testing",
		"lefthook": "catalog:devtools",
		"msw": "catalog:testing",
		"typescript": "catalog:",
		"ultracite": "catalog:devtools",
		"vercel": "catalog:vercel",
		"vitest": "catalog:testing"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "catalog:env",
		"@effect/experimental": "catalog:effect",
		"@effect/opentelemetry": "catalog:effect",
		"@notionhq/client": "catalog:notion",
		"@opentelemetry/api": "catalog:effect",
		"@opentelemetry/exporter-trace-otlp-http": "catalog:effect",
		"@opentelemetry/sdk-metrics": "catalog:effect",
		"@opentelemetry/sdk-trace-base": "catalog:effect",
		"@opentelemetry/sdk-trace-web": "catalog:effect",
		"@vercel/node": "catalog:vercel",
		"effect": "catalog:effect"
	},
	"pnpm": {
		"overrides": {
			"typescript": "^5.9.2"
		}
	}
}
